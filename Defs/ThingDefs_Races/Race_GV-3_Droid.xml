<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!-- =GV/3 Droid Base = -->

    <ThingDef Name="Base GV/3 Droid" Abstract="True">
        <thingClass>Pawn</thingClass>
        <category>Pawn</category>
        <selectable>true</selectable>
        <tickerType>Normal</tickerType>
        <altitudeLayer>Pawn</altitudeLayer>
        <useHitPoints>false</useHitPoints>
        <hasTooltip>true</hasTooltip>
        <soundImpactDefault>BulletImpact_Flesh</soundImpactDefault>
        <statBases>
            <Mass>70</Mass>
        </statBases>
        <inspectorTabs>
            <li>ITab_Pawn_Health</li>
            <li>ITab_Pawn_Needs</li>
            <li>ITab_Pawn_Character</li>
            <li>ITab_Pawn_Training</li>
            <li>ITab_Pawn_Social</li>
            <li>ITab_Pawn_Guest</li>
            <li>ITab_Pawn_Prisoner</li>
            <li>ITab_Pawn_FormingCaravan</li>
            <li>ITab_Pawn_Gear</li>
            <li>ITab_Pawn_Log</li>
        </inspectorTabs>
        <comps>
            <li>
                <compClass>CompAttachBase</compClass>
            </li>
        </comps>
        <drawGUIOverlay>true</drawGUIOverlay>
    </ThingDef>

    <PawnKindDef Name="Base GV/3 Droid kind" Abstract="True">
        <aiAvoidCover>false</aiAvoidCover>
        <destroyGearOnDrop>false</destroyGearOnDrop>
    </PawnKindDef>

    <ThingDef ParentName="Base GV/3 Droid">
        <defName>GV-3Droid</defName>
        <label>GV/3</label>
        <description>GV/3</description>
        <statBases>
            <MarketValue>4000</MarketValue>
            <MoveSpeed>1.5</MoveSpeed>
            <PsychicSensitivity>0</PsychicSensitivity>
            <ToxicSensitivity>0</ToxicSensitivity>
            <Flammability>0.5</Flammability>
            <ArmorRating_Blunt>0.10</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.20</ArmorRating_Sharp>
            <ComfyTemperatureMin>-250</ComfyTemperatureMin>
            <ComfyTemperatureMax>250</ComfyTemperatureMax>
            <MeatAmount>0</MeatAmount>
            <LeatherAmount>0</LeatherAmount>
        </statBases>
        <tools>
            <li>
                <label>left claw</label>
                <capacities>
                    <li>Scratch</li>
                </capacities>
                <power>8.5</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
            </li>
            <li>
                <label>right claw</label>
                <capacities>
                    <li>Scratch</li>
                </capacities>
                <power>8.5</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>FrontRightPaw</linkedBodyPartsGroup>
            </li>
            <li>
                <capacities>
                    <li>Bite</li>
                </capacities>
                <power>14.2</power>
                <cooldownTime>2.6</cooldownTime>
                <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
                <chanceFactor>0.7</chanceFactor>
            </li>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>5</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
                <chanceFactor>0.2</chanceFactor>
            </li>
        </tools>
        <race>
            <thinkTreeMain>Animal</thinkTreeMain>
            <thinkTreeConstant>AnimalConstant</thinkTreeConstant>
            <intelligence>ToolUser,Animal</intelligence>
            <makesFootprints>true</makesFootprints>
            <fleshType>Mechanoid</fleshType>
            <needsRest>false</needsRest>
            <hasGenders>false</hasGenders>
            <foodType>None</foodType>
            <wildness>0</wildness>
            <trainability>Advanced</trainability>
            <manhunterOnTameFailChance>0</manhunterOnTameFailChance>
            <manhunterOnDamageChance>0</manhunterOnDamageChance>
            <lifeExpectancy>1000</lifeExpectancy>
            <nameCategory>HumanStandard</nameCategory>
            <body>DroidAnimalWithPawsAndTail</body>
            <baseBodySize>0.75</baseBodySize>
            <baseHealthScale>4.5</baseHealthScale>
            <wildBiomes>
		        <AridShrubland>0.1</AridShrubland>
		        <TemperateForest>0.1</TemperateForest>
		        <TropicalRainforest>0.1</TropicalRainforest>
		        <IceSheet>0.1</IceSheet>
		        <BorealForest>0.1</BorealForest>
		        <Tundra>0.1</Tundra>
		        <Desert>0.1</Desert>
	        </wildBiomes>
	        <nuzzleMtbHours>24</nuzzleMtbHours>
            <lifeStageAges>
                <li>
                    <def>MechanoidFullyFormed</def>
                    <minAge>0</minAge>
                    <soundWounded>Pawn_Dog_Injured</soundWounded>
                    <soundDeath>Pawn_Dog_Death</soundDeath>
                    <soundCall>Pawn_Dog_Call</soundCall>
                    <soundAngry>Pawn_Dog_Angry</soundAngry>
                </li>
            </lifeStageAges>
            <soundCallIntervalRange>
                <min>1000</min>
                <max>2000</max>
            </soundCallIntervalRange>
            <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
            <hediffGiverSets>
                <li>OrganicStandard</li>
            </hediffGiverSets>
        </race> 
        <recipes>
            <li>InstallArtificialBrain</li>
            <li>InstallReactor</li>
            <li>InstallFluidReprocessor</li>
            <li>InstallDenture</li>
            <li>InstallTail</li>
            <li>InstallSightSensor</li>
            <li>InstallHearingSensor</li>
            <li>InstallMechLeg</li>
            <li>InstallPowerClaw</li>
			<li>ExciseCarcinoma</li>
            <li>AdministerMechSerumHealer</li>
            <li>RemoveBodyPart</li>
            <li>Euthanize</li>
            <li>Anesthetize</li>
        </recipes>
        <tradeTags>
            <li>AnimalCommon</li>
            <li>AnimalPet</li>
        </tradeTags> 
    </ThingDef>

    <PawnKindDef ParentName="Base GV/3 Droid kind">
        <defName>GV-3Droid</defName>
        <label>GV/3</label>
        <race>GV-3Droid</race>
        <combatPower>110</combatPower>
        <ecoSystemWeight>0.6</ecoSystemWeight>
        <wildGroupSize>
            <min>1</min>
            <max>1</max>
        </wildGroupSize>
        <lifeStages>
            <li>
                <bodyGraphicData>
                    <texPath>Things/GV-3 Droid/Bodies/TG_GV-3</texPath>
                    <graphicClass>Graphic_Multi</graphicClass>
                    <drawSize>1.6</drawSize>
                    <shadowData>
                        <volume>(0.3, 0.4, 0.3)</volume>
                        <offset>(0,0,-0.15)</offset>
                    </shadowData>
                </bodyGraphicData>
            </li>
        </lifeStages>
        <weaponMoney>
            <min>9999</min>
            <max>9999</max>
        </weaponMoney>
        <weaponTags>
            <li>MechanoidGunHeavy</li>
            <li>MechanoidGunMedium</li>
        </weaponTags>
    </PawnKindDef>
    
</Defs>
